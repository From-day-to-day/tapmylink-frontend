{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/properties-alphabetical-order": true,
    "selector-class-pattern": [
      "^[a-z]+(?:[A-Z][a-z]+)*(?:_[a-zA-Z]+(?:[A-Z][a-z]+)*)?(?:__[a-z]+(?:[A-Z][a-z]+)*)?(?:_[a-zA-Z]+(?:[A-Z][a-z]+)*)?$",
      {
        "message": "Class name should follow BEM naming convention"
      }
    ]
  }
}